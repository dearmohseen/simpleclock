<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context="com.mkhan.myapplication.MainActivity"
    android:weightSum="1"
    android:baselineAligned="false"
    android:layout_weight="1">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id"
        />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20sp">

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="56dp"
            android:format12Hour="hh:mm"
            android:text="Date"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="135sp"
            android:textStyle="normal"
            ads:layout_constraintHorizontal_bias="0.0"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent"
            ads:layout_constraintTop_toTopOf="parent" />

        <TextClock
            android:id="@+id/textClockSeconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-2dp"
            android:format12Hour="ss"
            android:format24Hour="ss"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="normal"
            ads:layout_constraintLeft_toRightOf="@+id/textClock"
            ads:layout_constraintTop_toTopOf="@+id/textClock" />

        <TextClock
            android:id="@+id/textClockAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="8dp"
            android:format12Hour="a"
            android:format24Hour=""
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="normal"
            ads:layout_constraintBottom_toBottomOf="@+id/textClock"
            ads:layout_constraintLeft_toRightOf="@+id/textClock" />

        <TextView
            android:id="@+id/textViewDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Saturday"

            android:textAlignment="viewStart"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            ads:layout_constraintLeft_toLeftOf="@+id/textClock"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            ads:layout_constraintTop_toBottomOf="@+id/textClock" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textAlignment="center"

            android:textColor="@android:color/white"
            android:textSize="28sp"
            ads:layout_constraintTop_toBottomOf="@+id/textViewDay"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1"
            android:layout_marginLeft="0dp"
            ads:layout_constraintLeft_toLeftOf="@+id/textViewDay"
            android:layout_marginTop="8dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>