<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="@dimen/widget_margin">

    <TextClock
        android:id="@+id/appwidget_textclock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:format12Hour="hh:mm"
        android:format24Hour="hh:mm"
        android:text="@string/date_constant"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"

        android:typeface="normal" />

    <TextClock
        android:id="@+id/widget_tcSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:format12Hour="ss"
        android:format24Hour="ss"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_marginRight="8dp"
        android:layout_alignBaseline="@+id/appwidget_textclock"
        android:layout_alignBottom="@+id/appwidget_textclock"
        android:layout_toEndOf="@+id/appwidget_textclock" />

    <TextClock
        android:id="@+id/widget_tcAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:format12Hour="a"
        android:format24Hour=""
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_alignBaseline="@+id/widget_tcSecond"
        android:layout_alignBottom="@+id/widget_tcSecond"
        android:layout_toEndOf="@+id/widget_tcSecond" />

    <TextClock
        android:id="@+id/widget_tcDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:format12Hour="EEE MMM, dd"
        android:format24Hour="EEE MMM, dd"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        android:textStyle="normal"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/appwidget_textclock"
        android:layout_centerHorizontal="true" />

</RelativeLayout>