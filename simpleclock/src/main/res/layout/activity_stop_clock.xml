<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.mkhan.myapplication.StopClockActivity">

    <TextView
        android:id="@+id/txtStopWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="00:00:00"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:textSize="60sp"
        ads:layout_constraintHorizontal_bias="0.492"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btnStopWatchClock"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:fontFamily="serif"
        android:minHeight="50dp"
        android:minWidth="80dp"
        android:text="Clock"
        android:textSize="14sp"
        android:textStyle="bold"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnStopWatchReset"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:minHeight="50dp"
        android:minWidth="80dp"
        android:text="Reset"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnStopWatchClock" />

    <Button
        android:id="@+id/btnStopWatchPlay"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Start"
        android:textSize="14sp"
        android:textStyle="bold"
        android:minHeight="50dp"
        android:minWidth="80dp"
        ads:layout_constraintLeft_toLeftOf="@+id/btnLap"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnStopWatchReset" />

    <Button
        android:id="@+id/btnLap"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="serif"
        android:text="Lap"
        android:textStyle="bold"
        android:minHeight="50dp"
        android:minWidth="80dp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/listStopwatch"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical"
        ads:layout_constraintBottom_toTopOf="@+id/btnStopWatchPlay"
        ads:layout_constraintTop_toBottomOf="@+id/txtStopWatch"
        android:layout_below="@+id/txtStopWatch"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnStopWatchClock" />

</RelativeLayout>
