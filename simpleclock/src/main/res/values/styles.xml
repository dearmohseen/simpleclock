<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyButtonStyleGreen" parent="android:Widget.Button.Inset">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:background">@color/colorGreen</item>

    </style>

    <style name="myTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

    <style name="myTextStyleDark" parent="myTextStyle">
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="MyButtonStyleRed" parent="android:Widget.Button.Inset">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/colorRed</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/colorGreen</item>
        <item name="android:solidColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:height">50dp</item>
    </style>
</resources>
