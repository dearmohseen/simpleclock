<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyButtonStyleGreen" parent="android:Widget.Button.Inset">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#ff8bc34a</item>

    </style>

    <style name="myTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="myTextStyleLight" parent="myTextStyle">
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

    <style name="MyButtonStyleRed" parent="android:Widget.Button.Inset">
        <item name="android:fontFamily">serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#ffc53929</item>
    </style>

</resources>
