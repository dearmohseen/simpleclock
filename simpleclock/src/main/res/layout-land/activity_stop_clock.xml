<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_resource"
    tools:context="com.mkhan.myapplication.StopClockActivity">

    <TextView
        android:id="@+id/txtStopWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorBtnText"
        android:textSize="70sp"
        ads:layout_constraintHorizontal_bias="0.468"
        ads:layout_constraintLeft_toRightOf="@+id/listStopwatch"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        ads:layout_constraintBottom_toTopOf="@+id/constraintLayout3" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        ads:layout_constraintBottom_toBottomOf="@+id/listStopwatch"
        android:layout_marginRight="8dp"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintLeft_toRightOf="@+id/listStopwatch"
        android:layout_marginLeft="8dp">

        <Button
            android:id="@+id/btnStopWatchClock"
            style="@style/MyButtonStyleGreen"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="serif"
            android:text="Back"
            android:textSize="24sp"
            ads:layout_constraintRight_toLeftOf="@+id/btnStopWatchReset"
            ads:layout_constraintTop_toTopOf="@+id/btnStopWatchReset"
            android:layout_marginTop="0dp"
            ads:layout_constraintBottom_toBottomOf="@+id/btnStopWatchReset"
            android:layout_marginBottom="0dp"
            ads:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnStopWatchPlay"
            style="@style/MyButtonStyleGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:minWidth="200dp"
            android:text="Start"
            android:textSize="32sp"
            ads:layout_constraintBottom_toTopOf="@+id/btnStopWatchReset"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/btnStopWatchReset"
            style="@style/MyButtonStyleRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Reset"
            android:textColor="@color/colorBtnText"
            android:textAlignment="center"
            android:textSize="24sp"
            ads:layout_constraintBottom_toBottomOf="parent"
            ads:layout_constraintLeft_toLeftOf="parent"
            ads:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/btnLap"
            style="@style/MyButtonStyleGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="8dp"
            android:fontFamily="serif"
            android:text="Lap"
            android:textSize="24sp"
            ads:layout_constraintLeft_toRightOf="@+id/btnStopWatchReset"
            ads:layout_constraintTop_toTopOf="@+id/btnStopWatchReset"
            android:layout_marginTop="0dp"
            ads:layout_constraintBottom_toBottomOf="@+id/btnStopWatchReset"
            android:layout_marginBottom="0dp"
            ads:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

    <ListView
        android:id="@+id/listStopwatch"
        android:layout_width="200dp"
        android:layout_height="0dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/border_resource"
        android:divider="#FF0000"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:scrollbars="vertical"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
