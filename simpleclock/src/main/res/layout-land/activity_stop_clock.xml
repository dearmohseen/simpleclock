<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_resource"
    tools:context="com.mkhan.myapplication.StopClockActivity">

    <TextView
        android:id="@+id/txtStopWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="serif"
        android:lineSpacingExtra="8sp"
        android:text="00:00:00"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:textSize="70sp"
        ads:layout_constraintHorizontal_bias="0.492"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp"
        android:layout_alignTop="@+id/listStopwatch"
        android:layout_alignEnd="@+id/btnLap"
        android:layout_marginTop="24dp" />

    <ListView
        android:id="@+id/listStopwatch"
        android:layout_width="200dp"
        android:layout_height="match_parent"

        android:background="@drawable/border_resource"
        android:divider="#FF0000"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:scrollbars="vertical"
        ads:layout_constraintBottom_toTopOf="@+id/btnStopWatchClock"
        ads:layout_constraintTop_toBottomOf="@+id/txtStopWatch"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnStopWatchPlay"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:fontFamily="serif"
        android:text="Start"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginStart="22dp"
        android:layout_alignStart="@+id/txtStopWatch"
        android:layout_above="@+id/btnStopWatchClock" />

    <Button
        android:id="@+id/btnStopWatchClock"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:fontFamily="serif"
        android:text="Back"
        android:textSize="24sp"
        ads:layout_constraintStart_toStartOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnStopWatchReset"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_dark"
        android:fontFamily="serif"
        android:text="Reset"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        ads:layout_constraintLeft_toRightOf="@+id/btnStopWatchClock"
        android:layout_marginStart="21dp"
        android:layout_alignBaseline="@+id/btnStopWatchClock"
        android:layout_alignBottom="@+id/btnStopWatchClock"
        android:layout_toEndOf="@+id/btnStopWatchClock" />

    <Button
        android:id="@+id/btnLap"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_green_light"
        android:fontFamily="serif"
        android:text="Lap"
        android:textSize="24sp"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintRight_toRightOf="@id/btnStopWatchPlay"
        android:layout_alignBaseline="@+id/btnStopWatchReset"
        android:layout_alignBottom="@+id/btnStopWatchReset"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
